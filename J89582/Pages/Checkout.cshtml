@page
@model J89582.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
@using J89582.Data
@using Microsoft.Extensions.Options
@inject IOptions<StripeSettings> Stripe


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

<div class="checkout">
<h1>Checkout</h1>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
                <th>Subtotal</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                var subtotal = item.Price * item.Quantity;
                <tr>
                    <td>@item.MenuName</td>
                    <td>@item.Price.ToString("C")</td>

                    <td>
                        <button type="submit">+</button>
                        <button type="submit">-</button>
                    </td>
                    <td>@item.Quantity</td>
                    <td>@subtotal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
        <div>Total = @Model.Total.ToString("C")</div>
    
</form>
</div>
<div class="pay">
<form asp-page-handler="Charge" asp-route-amount="@Model.AmountPayable" method="POST">
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@Stripe.Value.PublishableKey"
            data-locale="auto"
            data-description="CO5227 Burgerorzo Charge"
            data-amount="@Model.AmountPayable"
            data-currency="GBP">
    </script>
</form>
</div>