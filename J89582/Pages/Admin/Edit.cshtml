@page
@model J89582.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="css/adminPage.css" asp-append-version="true"/>

<div class="edit-page">

<h1>Edit</h1>

<h4>Menu</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Menu.ID" />
            <div class="form-group">
                <label asp-for="Menu.MenuName" class="control-label"></label>
                <input asp-for="Menu.MenuName" class="form-control" />
                <span asp-validation-for="Menu.MenuName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menu.Price" class="control-label"></label>
                <input asp-for="Menu.Price" class="form-control" />
                <span asp-validation-for="Menu.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>                